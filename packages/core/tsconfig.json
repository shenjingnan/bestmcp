{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "module": "ESNext",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@core/*": ["./src/*"],
      "@bestmcp/core": ["./src"],
      "@bestmcp/core/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
