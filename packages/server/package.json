{
  "name": "@bestmcp/server",
  "version": "0.1.1-beta.0",
  "description": "BestMCP 服务器库",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.build.json && tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "mcp",
    "modelcontextprotocol",
    "typescript"
  ],
  "author": "shenjingnan <sjn.code@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.2",
    "reflect-metadata": "^0.2.2"
  },
  "peerDependencies": {
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "tsup": "^8.5.0",
    "typescript": "^5.5.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
