{
  "name": "@bestmcp/client",
  "version": "0.0.1",
  "description": "BestMCP 客户端库",
  "main": "dist/index.mjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.mjs"
    }
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "pnpm build:js && pnpm build:dts",
    "build:js": "tsup",
    "build:dts": "tsc --emitDeclarationOnly",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "mcp",
    "modelcontextprotocol",
    "typescript",
    "client"
  ],
  "author": "shenjingnan <sjn.code@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.2"
  },
  "devDependencies": {
    "tsup": "^8.5.0",
    "typescript": "^5.5.4",
    "vitest": "^1.6.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
