{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "verbatimModuleSyntax": true
  },
  "include": ["packages/server/src/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "packages/server/tests/**/*",
    "examples/**/*",
    "src/**/*",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
