{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "dist"
  },
  "include": [
    "packages/core/src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "packages/core/tests/**/*",
    "examples/**/*",
    "src/**/*",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}