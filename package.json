{
  "name": "bestmcp",
  "version": "0.0.7",
  "description": "BestMCP 是一个为 TypeScript 设计的 Model Context Protocol (MCP) 服务器框架",
  "author": "shenjingnan <sjn.code@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/shenjingnan/bestmcp.git"
  },
  "keywords": [
    "mcp",
    "modelcontextprotocol",
    "typescript"
  ],
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.build.json --declaration --emitDeclarationOnly --declarationMap && tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "build:packages": "pnpm -r --filter './packages/**' build",
    "build:examples": "pnpm -r --filter './examples/**' build",
    "build:all": "pnpm build && pnpm build:packages && pnpm build:examples",
    "dev:packages": "pnpm -r --filter './packages/**' dev",
    "dev:examples": "pnpm -r --filter './examples/**' dev",
    "dev:all": "pnpm dev & pnpm dev:packages & pnpm dev:examples",
    "dev:docs": "cd docs && pnpm run dev",
    "clean:packages": "pnpm -r --filter './packages/**' clean",
    "test": "vitest run",
    "test:silent": "vitest run --silent",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "type:check": "tsc --noEmit",
    "spell:check": "cspell \"**/*.{ts,js,json,md,yaml}\"",
    "check": "biome check .",
    "check:fix": "biome check --write --unsafe .",
    "prepublishOnly": "pnpm clean && pnpm build && pnpm test && pnpm type:check && pnpm check:fix"
  },
  "dependencies": {
    "@bestmcp/client": "workspace:*",
    "@bestmcp/server": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.18.2",
    "reflect-metadata": "^0.2.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.6",
    "@release-it-plugins/workspaces": "^5.0.3",
    "@release-it/conventional-changelog": "^10.0.1",
    "@types/node": "^22.0.2",
    "@vitest/coverage-v8": "^1.6.1",
    "cspell": "^9.2.1",
    "release-it": "^19.0.5",
    "tsup": "^8.5.0",
    "typescript": "^5.5.4",
    "vitest": "^1.6.1"
  },
  "packageManager": "pnpm@10.13.1"
}
