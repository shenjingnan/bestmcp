{
  "name": "bestmcp",
  "version": "0.0.5",
  "description": "BestMCP 是一个为 TypeScript 设计的 Model Context Protocol (MCP) 服务器框架",
  "author": "shenjingnan <sjn.code@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/shenjingnan/bestmcp.git"
  },
  "keywords": [
    "mcp",
    "modelcontextprotocol",
    "typescript"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist/index.js",
    "dist/index.mjs",
    "dist/index.d.ts",
    "dist/index.js.map",
    "dist/index.mjs.map",
    "dist/packages/core/src/**/*.d.ts",
    "dist/packages/core/src/**/*.d.ts.map",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "pnpm build:core && pnpm build:js && pnpm build:dts",
    "build:core": "pnpm -C packages/core build",
    "build:js": "tsup",
    "build:dts": "tsc --project tsconfig.dts.json && sed 's|\"./|\"./packages/core/src/|g' dist/packages/core/src/index.d.ts > dist/index.d.ts",
    "build:all": "pnpm build && pnpm -C examples/calculator-mcp build",
    "dev": "pnpm -C packages/core dev",
    "dev:root": "tsup --watch",
    "clean": "rm -rf dist && pnpm -C packages/core clean && pnpm -C examples/calculator-mcp clean",
    "type:check": "tsc --noEmit",
    "test": "vitest run",
    "test:silent": "vitest run --silent",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "spell:check": "cspell \"**/*.{ts,js,json,md,yaml}\"",
    "check": "biome check .",
    "check:fix": "biome check --write --unsafe .",
    "docs:dev": "cd docs && pnpm run dev",
    "prepublishOnly": "pnpm clean && pnpm build:all && pnpm test && pnpm type:check && pnpm check:fix"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.2",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.6",
    "@release-it/conventional-changelog": "^10.0.1",
    "@swc/core": "^1.13.5",
    "@swc/helpers": "^0.5.17",
    "@types/node": "^22.0.2",
    "@vitest/coverage-v8": "^1.6.1",
    "cspell": "^9.2.1",
    "release-it": "^19.0.5",
    "tsup": "^8.5.0",
    "typescript": "^5.5.4",
    "vitest": "^1.6.1",
    "zod": "^3.25.76"
  },
  "packageManager": "pnpm@10.13.1"
}
