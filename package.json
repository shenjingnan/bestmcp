{
  "name": "bestmcp-workspace",
  "version": "0.0.7",
  "description": "BestMCP 是一个为 TypeScript 设计的 Model Context Protocol (MCP) 服务器框架",
  "author": "shenjingnan <sjn.code@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/shenjingnan/bestmcp.git"
  },
  "keywords": [
    "mcp",
    "modelcontextprotocol",
    "typescript",
    "monorepo"
  ],
  "scripts": {
    "build": "pnpm build:packages",
    "build:packages": "pnpm -r --filter './packages/**' build",
    "build:examples": "pnpm -r --filter './examples/**' build",
    "build:all": "pnpm build:packages && pnpm build:examples",
    "dev": "pnpm dev:packages",
    "dev:packages": "pnpm -r --filter './packages/**' dev",
    "dev:examples": "pnpm -r --filter './examples/**' dev",
    "dev:all": "pnpm dev:packages & pnpm dev:examples",
    "dev:docs": "cd docs && pnpm run dev",
    "clean": "pnpm -r --filter './packages/**' clean",
    "test": "vitest run --config config/vitest.config.ts",
    "test:silent": "vitest run --silent --config config/vitest.config.ts",
    "test:coverage": "vitest run --coverage --config config/vitest.config.ts",
    "test:watch": "vitest --config config/vitest.config.ts",
    "type:check": "tsc --noEmit --project config/tsconfig.json",
    "spell:check": "cspell --config config/cspell.json \"**/*.{ts,js,json,md,yaml}\"",
    "check": "biome check .",
    "check:fix": "biome check --write --unsafe .",
    "release": "changeset publish",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "version:prerelease": "changeset pre enter",
    "version:exit": "changeset pre exit"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.6",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.7",
    "@types/node": "^22.0.2",
    "@vitest/coverage-v8": "^1.6.1",
    "cspell": "^9.2.1",
    "tsup": "^8.5.0",
    "typescript": "^5.5.4",
    "vitest": "^1.6.1"
  },
  "packageManager": "pnpm@10.13.1"
}
